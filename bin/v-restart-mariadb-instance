#!/bin/bash
# info: restart mariadb instance
# options: NAME
#
# example: v-restart-mariadb-instance myapp
#
# This function restarts a MariaDB instance.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

name=$1

# Includes
source /etc/hestiacp/hestia.conf
source $HESTIA/func/main.sh
source_conf "$HESTIA/conf/hestia.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

if [ -z "$name" ]; then
    echo "Error: Instance name is required"
    exit 1
fi

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ "$name" = "default" ]; then
    service_name="mariadb"
    if ! systemctl list-unit-files mariadb.service &>/dev/null; then
        service_name="mysql"
    fi
else
    service_name="mariadb-$name"
fi

systemctl restart "$service_name"

if [ $? -eq 0 ]; then
    echo "Instance '$name' restarted successfully"
    exit 0
else
    echo "Error: Failed to restart instance '$name'"
    exit 1
fi
